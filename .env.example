# =============================================================================
# VESSEL SALES SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and configure for your environment
# Never commit .env files to version control!

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Generate a new secret key for production!
# You can use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here-generate-new-one-for-production

# Set to False in production
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts for production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# DATABASE SETTINGS (For Production PostgreSQL)
# =============================================================================

# Uncomment and configure for PostgreSQL in production
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=vessel_sales_db
# DB_USER=vessel_sales_user
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# EMAIL SETTINGS (Optional)
# =============================================================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# REDIS SETTINGS (For Production Caching)
# =============================================================================

# REDIS_URL=redis://localhost:6379/1

# =============================================================================
# STATIC FILES (For Production)
# =============================================================================

# STATIC_ROOT=/var/www/vessel_sales/static/
# MEDIA_ROOT=/var/www/vessel_sales/media/

# =============================================================================
# LOGGING
# =============================================================================

# LOG_LEVEL=INFO
# LOG_FILE=/var/log/vessel_sales/app.log